{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev-dependencies non-major dependencies",
      "groupSlug": "dev-dependencies-minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
