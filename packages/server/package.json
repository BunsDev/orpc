{
  "name": "@orpc/server",
  "type": "module",
  "version": "0.33.0",
  "license": "MIT",
  "homepage": "https://orpc.unnoq.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unnoq/orpc.git",
    "directory": "packages/server"
  },
  "keywords": [
    "unnoq",
    "orpc"
  ],
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/src/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./standard": {
        "types": "./dist/src/adapters/standard/index.d.ts",
        "import": "./dist/standard.js",
        "default": "./dist/standard.js"
      },
      "./fetch": {
        "types": "./dist/src/adapters/fetch/index.d.ts",
        "import": "./dist/fetch.js",
        "default": "./dist/fetch.js"
      },
      "./hono": {
        "types": "./dist/src/adapters/hono/index.d.ts",
        "import": "./dist/hono.js",
        "default": "./dist/hono.js"
      },
      "./next": {
        "types": "./dist/src/adapters/next/index.d.ts",
        "import": "./dist/next.js",
        "default": "./dist/next.js"
      },
      "./node": {
        "types": "./dist/src/adapters/node/index.d.ts",
        "import": "./dist/node.js",
        "default": "./dist/node.js"
      },
      "./ðŸ”’/*": {
        "types": "./dist/src/*.d.ts"
      }
    }
  },
  "exports": {
    ".": "./src/index.ts",
    "./fetch": "./src/adapters/fetch/index.ts",
    "./hono": "./src/adapters/hono/index.ts",
    "./next": "./src/adapters/next/index.ts",
    "./node": "./src/adapters/node/index.ts",
    "./ðŸ”’/*": {
      "types": "./src/*.ts"
    }
  },
  "files": [
    "!**/*.map",
    "!**/*.tsbuildinfo",
    "dist"
  ],
  "scripts": {
    "build": "tsup --onSuccess='tsc -b --noCheck'",
    "build:watch": "pnpm run build --watch",
    "type:check": "tsc -b"
  },
  "peerDependencies": {
    "hono": ">=4.6.0",
    "next": ">=14.0.0"
  },
  "dependencies": {
    "@orpc/contract": "workspace:*",
    "@orpc/shared": "workspace:*"
  }
}
